{
  "name": "end2end",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "mobile:build": "npm run build && npx cap sync",
    "mobile:android": "npm run mobile:build && npx cap open android",
    "mobile:ios": "npm run mobile:build && npx cap open ios",
    "mobile:deploy:android": "npm run build && npx cap sync android",
    "mobile:deploy:ios": "npm run build && npx cap sync ios",
    "build:android": "npm run build && npx cap sync android",
    "build:ios": "npm run build && npx cap sync ios",
    "build:web": "npm run build",
    "distribute": "bash distribute.sh",
    "telegram-bot": "node telegram-bot.js",
    "create-releases": "mkdir -p releases",
    "copy-apk": "npm run create-releases && cp android/app/build/outputs/apk/release/app-release.apk releases/gizli-android.apk",
    "package-web": "npm run create-releases && tar -czf releases/gizli-web-$(date +%Y%m%d).tar.gz dist/",
    "verify-apk": "node -e \"const crypto=require('crypto');const fs=require('fs');if(fs.existsSync('releases/gizli-android.apk')){const hash=crypto.createHash('sha256').update(fs.readFileSync('releases/gizli-android.apk')).digest('hex');console.log('SHA256:',hash);}else{console.log('APK not found');}\""
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@noble/ciphers": "^1.3.0",
    "@noble/curves": "^1.9.4",
    "@noble/hashes": "^1.8.0",
    "@types/express": "^5.0.3",
    "@types/libsodium-wrappers": "^0.7.14",
    "@wireapp/proteus": "^9.13.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "libsodium-wrappers": "^0.7.15",
    "node-telegram-bot-api": "^0.66.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "webrtc-adapter": "^9.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/simple-peer": "^9.11.8",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.2",
    "workbox-window": "^7.3.0"
  }
}
