# Gizli Environment Configuration
# Copy this file to .env and update the values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEB_APP_URL=https://your-domain.com

# Server Configuration
PORT=3001
NODE_ENV=production

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/private.key

# Database Configuration (if needed for future features)
# DATABASE_URL=postgresql://user:password@localhost:5432/gizli

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/gizli.log

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# WebRTC STUN/TURN Servers
STUN_SERVER=stun:stun.l.google.com:19302
# TURN_SERVER=turn:your-turn-server.com:3478
# TURN_USERNAME=username
# TURN_PASSWORD=password

# App Store Configuration (for future use)
APPLE_TEAM_ID=your_apple_team_id
GOOGLE_PLAY_SERVICE_ACCOUNT=path/to/service-account.json

# Analytics (optional, privacy-focused)
ENABLE_ANALYTICS=false
ANALYTICS_ENDPOINT=https://your-analytics-server.com

# Update Server Configuration
UPDATE_CHECK_URL=https://your-domain.com/api/version
LATEST_VERSION_URL=https://your-domain.com/releases/latest

# Security Headers
CSP_REPORT_URI=https://your-domain.com/csp-report
HSTS_MAX_AGE=31536000

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,doc,docx

# Rate Limiting for File Uploads
FILE_UPLOAD_RATE_LIMIT=5
FILE_UPLOAD_WINDOW_MS=60000

# Backup Configuration (for future use)
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=false
METRICS_PORT=9090

# Development Configuration
DEV_MODE=false
DEBUG_CRYPTO=false
VERBOSE_LOGGING=false
